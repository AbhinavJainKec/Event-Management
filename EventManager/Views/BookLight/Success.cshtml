@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }
@{ ViewData["Title"] = "Book Light Success"; }

@if (ViewData["BookingLightingMessage"] != null)
{
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <p class="alert alert-success" style="text-align:center;" id="successMessage">@ViewData["BookingLightingMessage"]</p>
                <h3 style="text-align:center;">Next Process Book Flowers</h3>
            </div>
            <div class="card-body">
                <div class="col d-grid mx-auto">
                    <a class="btn btn-outline-info" asp-area="" asp-controller="BookFlower" asp-action="BookFlower">Click Here to Book Flowers</a>
                </div>
            </div>
        </div>
    </div>
}

