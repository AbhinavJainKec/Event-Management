@model EventManager.Model.ChangePasswordModel
@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }
@{ ViewData["Title"] = "Change Password"; }

<div class="container-fluid">
    <div class="card mb-3">
        @Html.AntiForgeryToken()
        @if (TempData["MessageUpdate"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["MessageUpdate"]</p>
        }
        @Html.ValidationSummary(true)
        <div class="row g-0">
            <div class="col-md-3 align-self-center">
                <div id="image" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/RegisterImages/1.jpg" class="d-block img-fluid img-thumbnail rounded-start w-100" alt="Beach Party" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/RegisterImages/2.jpg" class="d-block img-fluid img-thumbnail rounded-start w-100" alt="Farewell Party" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/RegisterImages/3.jpg" class="d-block img-fluid img-thumbnail rounded-start w-100" alt="Anniversary" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/RegisterImages/4.jpg" class="d-block img-fluid img-thumbnail rounded-start w-100" alt="Wedding" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="ChangePassword">Change Password</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Customer" asp-action="ChangePassword">
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Old Password" aria-label="Old Password" />
                            <label class="control-label" asp-for="Password">Old Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" aria-label="New Password" />
                            <label class="control-label" asp-for="NewPassword">New Password</label>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col mb-3 d-grid mx-auto">
                                <input id="Submit" type="submit" class="btn btn-success" value="Change Password" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <p class="nav-link text-dark active">Instructions</p>
                        </li>
                    </ul>
                </div>
                <div class="card-body" style="max-height: 655px; overflow-y: auto">
                    <h6 class="card-title">
                        Password & Confirm Password
                    </h6>
                    <p class="card-text">
                        <ul>
                            <li>It should contain at least 8 characters.</li>
                            <li>It must contain one digit [0-9].</li>
                            <li>It must contain one upper case alphabet [A-Z].</li>
                            <li>It must contain one lower case alphabet [a-z].</li>
                            <li>It must contain one special character which includes [# $ ^ + = ! * ( ) @@ % &].</li>
                            <li>Their should be no white spaces.</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>