@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }
@{ ViewData["Title"] = "Book Venue Success"; }

@if (ViewData["BookingMessage"] != null)
{
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <p class="alert alert-success" style="text-align:center;" id="successMessage">@ViewData["BookingMessage"]</p>
                <h3 style="text-align:center;">Next Process Book Equipments</h3>
            </div>
            <div class="card-body">
                <div class="col d-grid mx-auto">
                    <a class="btn btn-outline-info" asp-area="" asp-controller="BookEquipment" asp-action="BookEquipment">Click Here to Book Equipments</a>
                </div>
            </div>
        </div>
    </div>
}