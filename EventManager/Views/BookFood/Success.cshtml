@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }
@{ ViewData["Title"] = "Book Food Success"; }

@if (ViewData["BookingFoodMessage"] != null)
{
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <p class="alert alert-success" style="text-align:center;" id="successMessage">@ViewData["BookingFoodMessage"]</p>
                <h3 style="text-align:center;">Next Process Book Lights</h3>
            </div>
            <div class="card-body">
                <div class="col d-grid mx-auto">
                    <a class="btn btn-outline-info" asp-area="" asp-controller="BookLight" asp-action="BookLight">Click Here to Book Lights</a>
                </div>
            </div>
        </div>
    </div>
}
