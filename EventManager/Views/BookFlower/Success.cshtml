@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }
@{ ViewData["Title"] = "Book Flower Success"; }

@if (ViewData["BookingFlowerMessage"] != null)
{
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <p class="alert alert-success" style="text-align:center;" id="successMessage">@ViewData["BookingFlowerMessage"]</p>
                <h3 style="text-align:center;">Process Completed Download Receipt</h3>
            </div>
            <div class="card-body">
                <div class="col d-grid mx-auto">
                    <a class="btn btn-outline-info" asp-area="" asp-controller="ShowAllBooking" asp-action="AllBookings">Show Final Receipt</a>
                </div>
            </div>
        </div>
    </div>
}
